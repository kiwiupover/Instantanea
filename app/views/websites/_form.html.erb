<%= simple_form_for @website do |f| %> 
  <%= f.error_notification %>
  <%= f.input :name,      :input_html => { :class => "input-text" }  %>
  <%= f.input :url,       :input_html => { :class => "input-text" }  %>
  <%= f.input :site_map,  :input_html => { :class => "input-text" }  %>
  <%= f.button :submit %>
<% end %> 