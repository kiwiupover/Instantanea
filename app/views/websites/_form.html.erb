<%= simple_form_for @website, :html => { :class => 'nice' } do |f| %> 
  <%= f.error_notification %>
  <%= f.input :name,      :input_html => { :class => "input-text" }  %>
  <%= f.input :url,       :input_html => { :class => "input-text" }  %>
  <%= f.input :site_map  %>
  <%= f.submit nil, :class => "nice simple radius blue button" %>
<% end %> 