<h2><%= @website.name %></h2>
<p>Last updated: <%= time_ago_in_words(@website.updated_at) %></p>
<p><%= link_to @website.url, @website.url %></p>
<%= content_tag "Please wait for the pages to be captured, this will take a little while." if @website.pages.blank? %>
<ul class="block-grid five-up">
  <% @website.pages.each do |page| %>
   <li>
      <% last_screen_shot = page.page_instances.last %>
      <%= image_tag last_screen_shot.screen_shot.smallthumb.url, :class => "left border" if last_screen_shot %>
      <h6><%= link_to page.title, [@website, page] %></h6>
      <p>Last updated: <%= time_ago_in_words(page.updated_at) %></p>
   </li>
  <% end %>
</ul>

